<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <br></br>

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name, list: "artists_autocomplete" %>
    <datalist id="artists_autocomplete">
      <% Artist.all.each do |artist| %>
        <option value="<%= artist.name %>">
        <% end %>
    </datalist>
    
  <br></br>

  <%= f.label :genre %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  
  <br></br>
  
  Notes <br>
  <input name="song[notes_content][]" id='song_notes_1'><br>
  <input name="song[notes_content][]" id='song_notes_2'><br>
  <input name="song[notes_content][]" id='song_notes_3'><br>

  <br></br>

  <%= f.submit %>
<% end %>



  




